<!DOCTYPE html>
<html>
<head>
  <title><%= t('title') %></title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'jquery.validate.min', 'additional-methods.min', 'script' %>
  <%= csrf_meta_tags %>
</head>
<body>
    <nav class="navbar navbar-fixed-top navbar-default">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Skills Management</a>
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li class="dropdown">
                    <a href="#" data-toggle="dropdown" class="dropdown-toggle"><%= current_user.email %> <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                          <%= link_to t('logout'), destroy_user_session_path, :method => :delete %>
                        </li>
                    </ul>
                </li>
              <% end %>
            </ul>
        </div>
    </nav>

    <div class="container-fluid">
      <div class="row no-padding">
        <% if notice %>
        <p class="alert alert-info notice"><%= notice %></p>
        <% end %>

        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>

        <div class="hidden-xs col-md-2 col-sm-1">
          <%= render "layouts/menu" %>
        </div>
        <div class="col-md-10 col-sm-11 content">
          <%= yield %>
        </div>
      </div>
    </div>

    <nav class="navbar navbar-default navbar-fixed-bottom">
        <div class="container text-center">
            @Copyright 2015
        </div>
    </nav>
</body>
</html>
