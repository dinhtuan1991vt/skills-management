= form_for @team , html: {class: "form-horizontal", id: "team-form"} do |f|
  %input{id: :team_skill_ids, type: "hidden", name: "team[skill_ids]"}
  %div.form-group
    = f.label :name, t('teams.index.name'), class: "col-sm-2 control-label"
    %div.col-sm-4
      = f.text_field :name, class: "form-control", required: true

  %div.form-group
    = f.label :parent_id, t('teams.index.parent'), class: "col-sm-2 control-label"
    %div.col-sm-4
      = collection_select(:team, :parent_id, Team.all, :id, :name, {selected: @team.parent_id, prompt: true}, {class: "form-control"})

  %div.form-group
    %label.col-sm-2.control-label=t('skill_cat')
    %div.col-sm-4.control-label.left-text
      %span=t('skill_cat_des')
      %div#skills-jstree-check-only{"data-source" => datalink}

  %div.form-group.control-area
    %div.col-sm-offset-2.col-sm-4
      = button_to t('save'), @team, {class: "btn btn-primary", id: "custom-team-skills-btn"}
      = link_to t('cancel'), teams_path, class: "btn btn-default"