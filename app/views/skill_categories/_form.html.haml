= form_for @category , html: {class: "form-horizontal", id: "skill-category-form"} do |f|
  %div.form-group
    = f.label :name, t('skill_categories.index.name'), class: "col-sm-2 control-label"
    %div.col-sm-4
      = f.text_field :name, class: "form-control", required: true

  %div.form-group
    = f.label :parent_id, t('skill_categories.index.parent'), class: "col-sm-2 control-label"
    %div.col-sm-4
      = collection_select(:skill_category, :parent_id, SkillCategory.all, :id, :name, {selected: @category.parent_id, prompt: true}, {class: "form-control"})

  %div.form-group
    %div.col-sm-offset-2.col-sm-4
      = button_to t('save'), @category, class: "btn btn-primary"
      = link_to t('cancel'), skill_categories_path, class: "btn btn-default"